{
  "name": "sql-notebook-kernel",
  "displayName": "SQL Notebook Kernel",
  "description": "SQL kernel for Jupyter notebooks in VS Code - execute SQL queries against SQL Server",
  "version": "1.0.0",
  "publisher": "Balaji Premkumar",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Notebooks",
    "Data Science"
  ],
  "activationEvents": [
    "onNotebook:jupyter-notebook",
    "onCommand:sqlNotebookKernel.selectConnection",
    "onCommand:sqlNotebookKernel.addConnection"
  ],
  "main": "./out/kernelExtension.js",
  "contributes": {
    "commands": [
      {
        "command": "sqlNotebookKernel.addConnection",
        "title": "SQL Kernel: Add Connection",
        "icon": "$(add)"
      },
      {
        "command": "sqlNotebookKernel.selectConnection",
        "title": "SQL Kernel: Select Connection",
        "icon": "$(plug)"
      },
      {
        "command": "sqlNotebookKernel.selectDatabase",
        "title": "SQL Kernel: Select Database",
        "icon": "$(database)"
      }
    ],
    "notebook/toolbar": [
      {
        "command": "sqlNotebookKernel.selectConnection",
        "group": "navigation@1",
        "when": "notebookType == jupyter-notebook"
      },
      {
        "command": "sqlNotebookKernel.selectDatabase",
        "group": "navigation@2",
        "when": "notebookType == jupyter-notebook"
      }
    ],
    "notebookRenderer": [
      {
        "id": "sql-kernel-result-renderer",
        "entrypoint": "./out/renderer.js",
        "displayName": "SQL Result Renderer",
        "mimeTypes": [
          "x-application/sql-notebook-result"
        ],
        "requiresMessaging": "optional"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --config webpack.kernel.config.js",
    "package": "webpack --config webpack.kernel.config.js --mode production --devtool hidden-source-map"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@types/vscode": "^1.75.0",
    "@types/vscode-notebook-renderer": "^1.72.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.3.0",
    "webpack": "^5.105.2",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "mssql": "^10.0.0"
  }
}
